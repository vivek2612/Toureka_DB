<!DOCTYPE html>
<html>
<head>
    
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= stylesheet_link_tag 'jquery-ui-1.10.3.custom' %>
    <%= javascript_include_tag 'jquery-1.10.2.min.js', 'jquery-ui-1.10.3.custom.min.js' %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
   
  </head>
  <body>
    <div class="container">
      <%= yield %>
      <%= yield :scripts%>
    </div>
  </body>
</html>
<script>
  var EntryPointCount=0;
  var EPD=0;
  var TS=0;
  var TSD=0;
  var LTS=0;
  var LTSD=0;
  var H=0;
  var HD=0;

  function deleteFunc(param){
    $(param).parent().remove(); 
  };     

  $('#addEntryPoint').click(function(){
      EntryPointCount= EntryPointCount+1;
      div1='<div style="background:#777777;margin-left:80px;padding-top:10px;display:"><input type="text" class="input-medium search-query" name="EPname'+EntryPointCount+'" placeholder="Name"><input type="text" class="input-medium search-query" name="EPLat'+EntryPointCount+'" placeholder="Latitude"><input type="text" class="input-medium search-query" name="EPLong'+EntryPointCount+'" placeholder="Longitude"><input type="text" class="input-medium search-query" name="EPType'+EntryPointCount+'" placeholder="Type"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.addEntryPoint').prepend(div1);                         
  });

  $('#deleteEntryPoint').click(function(){
      EPD=EPD+1;
      div2='<div style="background:#777777;margin-left:300px;padding-top:10px;display:"><input type="text" class="input-medium search-query" name="EPNameD'+EPD+'" placeholder="Name"><input type="text" class="input-medium search-query" placeholder="Type"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.deleteEntryPoint').prepend(div2);                         
  });

   $('#addTouristSpot').click(function(){
      TS=TS+1;
      div3='<div style="background:#777777;margin-left:80px;padding-top:10px;display:"><input type="text" class="input-small search-query" name="TSName'+TS+'" placeholder="Name"><input type="text" class="input-small search-query" name="TSLat'+TS+'" placeholder="Latitude"><input type="text" class="input-small search-query" name="TSLong'+TS+'" placeholder="Longitude"><input type="text" class="input-small search-query" name="TSDesc'+TS+'" placeholder="Discription"><input type="text" class="input-small search-query" name="TSCat'+TS+'" placeholder="Category"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.addTouristSpot').prepend(div3);                         
  });

  $('#deleteTouristSpot').click(function(){
      TSD=TSD+1;
      div4='<div style="background:#777777;margin-left:300px;padding-top:10px;display:"><input type="text" class="input-medium search-query" name="TSNameD'+TSD+'" placeholder="Name"><input type="text" class="input-medium search-query" placeholder="Category"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.deleteTouristSpot').prepend(div4);                         
  });

  $('#addHotel').click(function(){
      H=H+1;
      div5='<div style="background:#777777;margin-left:80px;padding-top:10px;display:"><input type="text" class="input-medium search-query" name="HName'+H+'" placeholder="Name"><input type="text" class="input-medium search-query" placeholder="Latitude"><input type="text" class="input-medium search-query" placeholder="Longitude"><input type="text" class="input-medium search-query" placeholder="Discription"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.addHotel').prepend(div5);                         
  });

  $('#deleteHotel').click(function(){
      HD=HD+1;
      div6='<div style="background:#777777;margin-left:300px;padding-top:10px;display:"><input type="text" class="input-large search-query" name="HNameD'+HD+'" placeholder="Name"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.deleteHotel').prepend(div6);                         
  });

   $('#addTransportStand').click(function(){
      LTS=LTS+1;
      div7='<div style="background:#777777;margin-left:80px;padding-top:10px;display:"><input type="text" class="input-medium search-query" name="LTSName'+LTS+'" placeholder="Name"><input type="text" class="input-medium search-query" name="LTSLat'+LTS+'" placeholder="Latitude"><input type="text" class="input-medium search-query" name="LTSLong'+LTS+'" placeholder="Longitude"><input type="text" class="input-medium search-query" name="LTSType'+LTS+'" placeholder="Type"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.addTransportStand').prepend(div7);                         
  });

  $('#deleteTransportStand').click(function(){
      LTSD=LTSD+1;
      div8='<div style="background:#777777;margin-left:300px;padding-top:10px;display:"><input type="text" class="input-medium search-query" name="LTSNameD'+LTSD+'" placeholder="Name"><input type="text" class="input-medium search-query" placeholder="Type"><a onclick="deleteFunc(this)" class="delete btn btn-mini" href="#"><i class="icon-remove"></i> delete</a></div>';
      $('.deleteTransportStand').prepend(div8);   
  });  

</script>