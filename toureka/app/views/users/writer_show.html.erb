<% provide(:title, "StateAddition")	%>

<%= render 'layouts/writer_header' %>

<%= render 'layouts/writer_header3', whatToAdd: "State" %>


<form role="form1" action=<%="/users/#{@user.id}/writer_district"%> method="get" >
  <div class="row-fluid"style="background:#444444;border-radius:10px;margin-top: 110px;">
    <div class="span12" style="margin:20px;margin-left:40px">
      <div class="row-fluid">

        <div class="span2">
          <input type="text" class="input-small search-query" name="SN1" id="SN1" placeholder="State Name">
        </div>


        <div class="row-fluid offset2" style="">
          <div class="span3">
            <input type="text" class="input-medium search-query" name="TLLat1" id="TLLat1" placeholder="Top Left Latitude">
          </div>

          <div class="span3" style="margin-left=0px">
            <input type="text" class="input-medium search-query" name="TLLong1" id="TLLong1" placeholder="Top Left Longitude">
          </div>
        </br>
      </div>

      <div class="row-fluid offset2" style="margin-top:20px">
        <div class="span3">
          <input type="text" class="input-medium search-query" name="BRLat1" id="BRLat1" placeholder="Right Bottom Latitude">
        </div>

        <div class="span3">
          <input type="text" class="input-medium search-query" name="BRLat2" id="BRLat2" placeholder="Right Bottom Longitude">
        </div>

        <div class="span3">
          <button class="btn" type="submit" style="width:200px" >Add New State</button>
        </div>
      </div>              
    </div>
  </div>
</div>
</form>

</br>
