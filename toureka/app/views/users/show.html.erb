							<ul id="markers_list"></ul>
						
					</div>
				</div>
			</div>
			<div class="span9" >
				<div id="mapWalaContainer" >
					<div class="mapOnly">
					<%= gmaps("markers" => {"data" => @json1, "options" => {"list_container" => "markers_list" } }) %>
						
					</div>
